{
    "crawl_rules": [
      {
        "from": ".*/books/edp-open-books",
        "to": [
          { "pattern": ".*" , "selector": ".news-container .items-row a", "ignoreInnerLinks": true}
        ]
      }
    ],
    "metadata_extraction": [
    {
      "url_pattern": ".*books/edp-open-books/.*",
      "fields": {
        "title": { "selector": ".item-bk h1", "property": "innerText" },
        "description": { "selector": "meta[property='twitter:description']", "property": "content" },
        "author_empty": { "selector": "name='parsely-author'" }
      }
    }
  ]
  }